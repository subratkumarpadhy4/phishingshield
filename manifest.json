{
  "manifest_version": 3,
  "name": "Oculus",
  "version": "1.1",
  "description": "Proactively detects, warns against, and prevents navigation to malicious phishing links.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "contextMenus",
    "storage",
    "management",
    "notifications",
    "scripting",
    "alarms",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PhishingShield Settings",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/ai_model.js",
        "js/threat_intel.js",
        "js/risk_engine.js",
        "js/chameleon.js",
        "js/content.js"
      ],
      "css": [
        "css/styles.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "js/gmailSentinel.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/digital_dna.js",
        "js/email.min.js",
        "js/banned.js",
        "banned.html",
        "warning.html",
        "css/*",
        "images/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000 http://127.0.0.1:3000 https://oculus-eight.vercel.app https://*.onrender.com https://api.emailjs.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com;"
  }
}